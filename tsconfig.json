{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["es2021", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "target": "ES2020",
    "removeComments": true,
    "sourceRoot": "./src/",
    "rootDir": "./src/",
    "sourceMap": true,
    "downlevelIteration": true
  },
  "include": ["src/"]
}
